// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  name      String?  @db.VarChar(255)
  role      String?  @db.VarChar(255)
  email     String   @unique @db.VarChar(255)
  password  String   @db.VarChar(255)
}

model User {
  id            Int      @id @default(autoincrement())
  name          String?  @db.VarChar(255)
  email         String   @unique @db.VarChar(255)
  password      String   @db.VarChar(255)

  invoice       Boolean  @default(false)

  cards         Card[]
  orders        Order[]
  addresses     Address[]
  payments      Payment[]
  shipments     Shipment[]
  company       Company[]

  cart          Index?
  wishlist      Wishlist?
}

model Card {
  id            Int         @id @default(autoincrement())
  session       String?     @db.LongText
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  stripe        Json?

  default       Boolean     @default(false)

  userId        Int
  user          User        @relation(fields: [userId], references: [id])

  payment   Payment?
}

model Company {
  id        Int                 @id @default(autoincrement())
  createdAt DateTime            @default(now()) @db.Timestamp(6)

  default           Boolean     @default(false)
  state             String      @db.VarChar(255)
  name              String      @db.VarChar(255)
  phone             String      @db.VarChar(255)
  street            String      @db.VarChar(255)
  postal            String      @db.VarChar(255)
  city              String      @db.VarChar(255)
  province          String      @db.VarChar(255)
  vat               String?     @db.VarChar(255)
  sdi               String?     @db.VarChar(255)

  userId    Int
  user      User                @relation(fields: [userId], references: [id])
}

model Address {
  id        Int                 @id @default(autoincrement())
  createdAt DateTime            @default(now()) @db.Timestamp(6)

  default           Boolean     @default(false)
  state             String      @db.VarChar(255)
  name              String      @db.VarChar(255)
  phone             String      @db.VarChar(255)
  street            String      @db.VarChar(255)
  postal            String      @db.VarChar(255)
  city              String      @db.VarChar(255)
  province          String      @db.VarChar(255)
  instructions      String?     @db.VarChar(255)
  directions        String?     @db.VarChar(255)

  userId    Int
  user      User                @relation(fields: [userId], references: [id])
}

model Cart {
  id            Int         @id @default(autoincrement())
  session       String?     @unique @db.VarChar(255)
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  userId        Int?         @unique
  User          User?        @relation(fields: [userId], references: [id])

  items         Json?

}

model Wishlist {
  id            Int         @id @default(autoincrement())
  session       String?     @unique @db.VarChar(255)
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  userId        Int?         @unique
  User          User?        @relation(fields: [userId], references: [id])

  items         Json?
}

model Order {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Timestamp(6)
  product   String?  @db.LongText

  userId    Int
  user      User     @relation(fields: [userId], references: [id])

  payment   Payment?
  shipment  Shipment?
}

model Payment {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  stripe        Json?

  userId        Int
  User          User        @relation(fields: [userId], references: [id])

  CardId       Int         @unique
  Card          Card        @relation(fields: [CardId], references: [id])

  orderId       Int         @unique
  order         Order       @relation(fields: [orderId], references: [id])
}

model Shipment {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  packlink      Json?

  userId        Int
  User          User        @relation(fields: [userId], references: [id])

  orderId       Int         @unique
  order         Order       @relation(fields: [orderId], references: [id])
}

model Product {
  id                Int        @id @default(autoincrement())
  uuid              String     @unique @db.VarChar(255)
  createdAt         DateTime   @default(now()) @db.Timestamp(6)

  name              String     @db.VarChar(255)
  description       String     @db.LongText
  presentation      String?    @db.LongText

  thumbnail         String?    @db.LongText
  thumbnailalt      String?      @db.VarChar(255)

  price             Decimal    @db.Decimal
  tax               Decimal?   @db.Decimal
  discount          Decimal?   @db.Decimal
  weight            Decimal?   @db.Decimal
  quantity          Int?       @db.Int

  tags              ProductTag[]
  langs             ProductLang[]
  images            ProductImage[]

  seotitle        String?      @db.VarChar(255)
  seodescription  String?      @db.VarChar(255)
  seokey          String?      @db.VarChar(255)

  combinations       Combination[]

//  attributes        Attribute[]
  categories        Category[]

}

model ProductTag {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  name          String      @db.VarChar(255)

  productId     Int
  product       Product     @relation(fields: [productId], references: [id])

}

model ProductLang {
  id                Int         @id @default(autoincrement())
  createdAt         DateTime    @default(now()) @db.Timestamp(6)
  iso               String     @db.VarChar(255)

  name              String     @db.VarChar(255)
  description       String     @db.LongText
  cover             String?    @db.LongText

  productId         Int
  product           Product    @relation(fields: [productId], references: [id])
}

model ProductImage {
  id                Int         @id @default(autoincrement())
  createdAt         DateTime    @default(now()) @db.Timestamp(6)

  path              String      @db.VarChar(255)
  pathalt           String?      @db.VarChar(255)

  productId         Int
  product           Product     @relation(fields: [productId], references: [id])
}

model Attribute {
  id                Int        @id @default(autoincrement())
  createdAt         DateTime   @default(now()) @db.Timestamp(6)

  name              String     @db.VarChar(255)
  type              String     @db.VarChar(255)

  langs             AttributeLang[]
  values            AttributeValue[]

  combinations       Combination[]

//  products          Product[]

}

model AttributeLang {
  id                Int        @id @default(autoincrement())
  createdAt         DateTime   @default(now()) @db.Timestamp(6)
  iso               String     @db.VarChar(255)

  name              String     @db.VarChar(255)

  attributeId       Int
  attribute         Attribute  @relation(fields: [attributeId], references: [id])

}

model AttributeValue {
  id                Int        @id @default(autoincrement())
  createdAt         DateTime   @default(now()) @db.Timestamp(6)
  spec              String     @db.VarChar(255)

  attributeId       Int
  attribute         Attribute  @relation(fields: [attributeId], references: [id])

  combinations      Combination[]

}

model Combination {
  id                Int                 @id @default(autoincrement())
  createdAt         DateTime            @default(now()) @db.Timestamp(6)

  thumbnail         String?    @db.LongText

  price             Decimal?    @db.Decimal
  discount          Decimal?   @db.Decimal
  weight            Decimal?   @db.Decimal
  quantity          Int?       @db.Int

  tags              CombinationTag[]
  images            CombinationImage[]

  productId     Int
  product       Product             @relation(fields: [productId], references: [id])

  attributeId   Int
  attribute     Attribute           @relation(fields: [attributeId], references: [id])

  valueId       Int
  value         AttributeValue      @relation(fields: [valueId], references: [id])

}

model CombinationTag {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  name          String      @db.VarChar(255)

  combinationId     Int
  combination       Combination  @relation(fields: [combinationId], references: [id])

}

model CombinationImage {
  id                Int         @id @default(autoincrement())
  createdAt         DateTime    @default(now()) @db.Timestamp(6)

  path              String      @db.VarChar(255)
  pathalt           String?      @db.VarChar(255)

  combinationId     Int
  combination       Combination  @relation(fields: [combinationId], references: [id])
}

model Category {
  id                Int       @id @default(autoincrement())
  uuid              String    @unique @db.VarChar(255)
  createdAt         DateTime  @default(now()) @db.Timestamp(6)
  parentId          Int?      @default(0)

  homepage          Boolean   @default(false)
  menu              Boolean   @default(false)
  footer            Boolean   @default(false)

  name              String    @db.VarChar(255)
  description       String    @db.LongText

  cover             String?   @db.LongText
  thumbnail         String?   @db.LongText

  products          Product[]
  langs             CategoryLang[]

}

model CategoryLang {
  id                Int         @id @default(autoincrement())
  createdAt         DateTime    @default(now()) @db.Timestamp(6)
  iso               String     @db.VarChar(255)

  name              String    @db.VarChar(255)
  description       String    @db.LongText
  cover             String?   @db.LongText

  categoryId    Int
  category      Category    @relation(fields: [categoryId], references: [id])

}

model Page {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  name          String      @unique @db.VarChar(255)
  body          String?     @db.LongText
  enabled       Boolean     @default(true)

  seotitle        String?      @db.VarChar(255)
  seodescription  String?      @db.VarChar(255)
  seokey          String?      @db.VarChar(255)

  langs      PageLang[]
}

model PageLang {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  iso               String     @db.VarChar(255)

  name          String      @unique @db.VarChar(255)
  body          String      @db.LongText

  pageId    Int
  page      Page     @relation(fields: [pageId], references: [id])
}

model Section {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)

  parentId      Int?        @default(0)

  slug          String      @unique @db.VarChar(255)
  name          String      @db.VarChar(255)
  body          Json

  langs         SectionLang[]
}

model SectionLang {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  iso           String      @db.VarChar(255)

  name          String      @db.VarChar(255)
  body          Json

  sectionId     Int
  section       Section     @relation(fields: [sectionId], references: [id])
}

model Lang {
  id            Int       @id @default(autoincrement())
  default       Boolean   @default(false)
  createdAt     DateTime  @default(now()) @db.Timestamp(6)
  name          String    @db.VarChar(255)
  iso           String    @db.VarChar(255)
}

model Setting {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  key           String      @unique @db.VarChar(255)
  value         String      @db.VarChar(255)
}

model Option {
  id            Int         @id @default(autoincrement())
  createdAt     DateTime    @default(now()) @db.Timestamp(6)
  key           String      @unique @db.VarChar(255)
  enabled       Boolean     @default(false)
}

model Newsletter {
  id            Int          @id @default(autoincrement())
  createdAt     DateTime     @default(now()) @db.Timestamp(6)
  name          String?      @db.VarChar(255)
  email         String?      @db.VarChar(255)
  phone         String?      @db.VarChar(255)
}